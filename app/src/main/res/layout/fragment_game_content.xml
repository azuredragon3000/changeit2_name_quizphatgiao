<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".GameActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/point"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Point: 0"
            android:textSize="30sp"

            />

        <TextView
            android:id="@+id/game_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Level: 0"
            android:textSize="25sp"

            />

        <TextView
            android:id="@+id/curques"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/point"
            android:layout_marginTop="5dp"
            android:text="Câu Hỏi: 1"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:text="Time: 0s"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/game_gold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/time"
            android:layout_alignParentRight="true"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:text="Vàng: 100"
            android:textSize="25sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_gravity="center"
            >
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bt1"
                android:layout_width="50dp"
                android:text="1"
                android:background="@color/Grey"
                android:textSize="15sp"
                android:layout_height="50dp"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bt2"
                android:layout_width="50dp"
                android:background="@color/Grey"
                android:text="2"
                android:textSize="15sp"
                android:layout_height="50dp"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bt3"
                android:layout_width="50dp"
                android:background="@color/Grey"
                android:text="3"
                android:textSize="15sp"
                android:layout_height="50dp"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bt4"
                android:layout_width="50dp"
                android:background="@color/Grey"
                android:text="4"
                android:textSize="15sp"
                android:layout_height="50dp"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bt5"
                android:layout_width="50dp"
                android:background="@color/Grey"
                android:text="5"
                android:textSize="15sp"
                android:layout_height="50dp"/>
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/question"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:text="this is question"
        android:background="@color/teal_200"
        android:textSize="25sp"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/ans1"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:text="this is ans 1"
        android:background="@android:color/darker_gray"
        android:textSize="23sp"
        android:textColor="@color/white"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/ans2"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:text="this is ans 2"
        android:background="@android:color/darker_gray"
        android:textSize="23sp"
        android:textColor="@color/white"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/ans3"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:text="this is ans 3"
        android:background="@android:color/darker_gray"
        android:textSize="23sp"
        android:textColor="@color/white"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/ans4"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:text="this is ans 4"
        android:background="@android:color/darker_gray"
        android:textSize="23sp"
        android:textColor="@color/white"
        android:layout_height="wrap_content"/>

</LinearLayout>